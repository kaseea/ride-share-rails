
<% if @passenger && @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


 <%= form_with model: @passenger, class: form_class do |f| %>
<%# Where are we making form_class and intro_text and action_name? %>
  <p><%= intro_text %></p>

   <%= f.label :name%>
  <%= f.text_field :name %>

   <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

   <%= f.submit action_name, class: "passenger-form__edit-btn" %>
<% end %>