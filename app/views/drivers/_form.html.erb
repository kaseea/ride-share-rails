<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @driver, class: form_class do |f| %>
<%# Where are we making form_class and intro_text and action_name? %>
  <p><%= intro_text %></p>

  <%= f.label :name%>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.submit action_name, class: "driver-form__edit-btn" %>
<% end %>