<h2>trips:</h2>
<% if user.trips.empty? %>
  <p><strong><%= user.name %></strong> hasn't taken any trips yet!</p>
<% else %>
  <table>
    <tr>
      <th>id</th>
      <th>date</th>
      <th>driver</th>
      <th>passenger</th>
      <th>price</th>
      <th>rating</th>
      <th>edit</th>
      <th>delete</th>
    </tr>
    <% user.trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.id, passenger_trip_path(passenger_id: params[:id], id: trip.id) %></td>
        <td><%= trip.date.strftime("%F") %></td>
        <td><%= link_to trip.driver.name, driver_path(trip.driver.id) %></td>
        <td><%= link_to trip.passenger.name, passenger_path(trip.passenger.id) %></td>
        <td><%= trip.cost/100.0 %></td>
        <td class="center-table-box"><%= trip.rating %></td>
        <td><%= button_to "Edit", edit_passenger_trip_path(passenger_id: params[:id], id: trip.id), method: :get %></td>
        <td><%= button_to "Delete", passenger_trip_path(passenger_id: params[:id], id: trip.id), method: :delete, data: {confirm: "you sure you wanna delete?"} %></td>
      </tr>
    <% end %>
  </table>
<% end %>
